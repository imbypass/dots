#!/bin/bash

# Define color codes
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[0;33m'
BLUE='\033[0;34m'
PURPLE='\033[0;35m'
CYAN='\033[0;36m'
WHITE='\033[0;37m'
BOLD='\033[1m'
UNDERLINE='\033[4m'
NC='\033[0m' # No Color (reset)

# Check for root privileges
if [ "$EUID" -ne 0 ]; then
  echo -e "${BOLD}${RED}Error:${NC} This script must be run with sudo privileges."
  echo -e "Please run again with: sudo $0"
  exit 1
fi


echo -e "${BOLD}${BLUE}:: ${NC}Performing desktop file cleanup..."

# Remove unused .desktop files
UNUSED_USR_SHARE=(
    avahi-discover
    assistant
    bssh
    btop
    bvnc
    blueman-manager
    cmake-gui
    designer
    electron34
    electron35
    fish
    foot-server
    footclient
    java-java-openjdk
    jconsole-java-openjdk
    jshell-java-openjdk
    linguist
    lstopo
    ncspot
    nvim
    org.kde.kdeconnect.nonplasma
    org.freedesktop.IBus.Setup
    pcmanfm-qt
    pcmanfm-qt-desktop-pref
    qdbusviewer
    qv4l2
    qvidcap
    ranger
    yad-icon-browser
    yad-settings
)

for file in "${UNUSED_USR_SHARE[@]}"; do
    if [ "$1" = "--verbose" ] || [ "$1" = "-v" ]; then
        echo -e " ${YELLOW}==> ${NC}Removing ${file}.desktop.."
    fi
    sudo rm -f "/usr/share/applications/${file}.desktop" > /dev/null
done

echo -e "${BOLD}${GREEN}:: ${NC}Desktop file cleanup completed successfully."
