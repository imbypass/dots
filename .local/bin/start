#!/bin/bash

NWG_WM=hyprland
NWG_FILEMANAGER=nautilus
NWG_VALIGN=top
NWG_HALIGN=left
NWG_TERM=foot
NWG_PADDING=0
NWG_CMD_LOCK="hyprlock"
NWG_CMD_RESTART="reboot"
NWG_CMD_SHUTDOWN="shutdown now"
NWG_CMD_LOGOUT="hyprctl dispatch exit"

nwg-menu -d -wm $NWG_WM -fm $NWG_FILEMANAGER -ha $NWG_HALIGN -va $NWG_VALIGN -term $NWG_TERM -ml 4 -mt 4 -padding $NWG_PADDING -cmd-lock $NWG_CMD_LOCK -cmd-restart $NWG_CMD_RESTART -cmd-shutdown $NWG_CMD_SHUTDOWN -cmd-logout $NWG_CMD_LOGOUT
