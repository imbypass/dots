:root {
    /* The main accent color and the matching text value */
    --adw-accent-bg-rgb: #{{base0F-hex}} !important;
    --adw-accent-fg-rgb: #{{base00-hex}} !important;
    --adw-accent-rgb: #{{base0F-hex}} !important;

    /* destructive-action buttons */
    --adw-destructive-bg-rgb: #{{base08-hex}} !important;
    --adw-destructive-fg-rgb: #{{base05-hex}} !important;
    --adw-destructive-rgb: #{{base08-hex}} !important;

    /* Levelbars, entries, labels and infobars. These don't need text colors */
    --adw-success-bg-rgb: #{{base0B-hex}} !important;
    --adw-success-fg-rgb: #{{base01-hex}} !important;
    --adw-success-rgb: #{{base0B-hex}} !important;

    --adw-warning-bg-rgb: #{{base0A-hex}} !important;
    --adw-warning-fg-rgb: #{{base00-hex}} !important;
    --adw-warning-fg-a: 0.8 !important;
    --adw-warning-rgb: #{{base0A-hex}} !important;

    --adw-error-bg-rgb: #{{base08-hex}} !important;
    --adw-error-fg-rgb: #{{base01-hex}} !important;
    --adw-error-rgb: #{{base08-hex}} !important;

    /* Window */
    --adw-window-bg-rgb: #{{base00-hex}} !important;
    --adw-window-fg-rgb: #{{base05-hex}} !important;

    /* Views - e.g. text view or tree view */
    --adw-view-bg-rgb: #{{base01-hex}} !important;
    --adw-view-fg-rgb: #{{base05-hex}} !important;

    /* Header bar, search bar, tab bar */
    --adw-headerbar-bg-rgb: #{{base00-hex}} !important;
    --adw-headerbar-fg-rgb: #{{base05-hex}} !important;
    --adw-headerbar-border-rgb: #{{base02-hex}} !important;
    --adw-headerbar-backdrop-rgb: #{{base01-hex}} !important;
    --adw-headerbar-shade-rgb: 0, 0, 0 !important;
    --adw-headerbar-shade-a: 0.36 !important;
    --adw-headerbar-darker-shade-rgb: 0, 0, 0 !important;
    --adw-headerbar-darker-shade-a: 0.9 !important;

    /* Split pane views */
    --adw-sidebar-bg-rgb: #{{base00-hex}} !important;
    --adw-sidebar-fg-rgb: #{{base05-hex}} !important;
    --adw-sidebar-backdrop-rgb: #{{base02-hex}} !important;
    --adw-sidebar-shade-rgb: 0, 0, 0 !important;
    --adw-sidebar-shade-a: 0.36 !important;

    --adw-secondary-sidebar-bg-rgb: #{{base00-hex}} !important;
    --adw-secondary-sidebar-fg-rgb: #{{base05-hex}} !important;
    --adw-secondary-sidebar-backdrop-rgb: #{{base02-hex}} !important;
    --adw-secondary-sidebar-shade-rgb: 0, 0, 0 !important;
    --adw-secondary-sidebar-shade-a: 0.36 !important;

    /* Cards, boxed lists */
    --adw-card-bg-rgb: 255, 255, 255 !important;
    --adw-card-bg-a: 0.08 !important;
    --adw-card-fg-rgb: 255, 255, 255 !important;
    --adw-card-shade-rgb: 0, 0, 0 !important;
    --adw-card-shade-a: 0.36 !important;

    /* Dialogs */
    --adw-dialog-bg-rgb: #{{base01-hex}} !important;
    --adw-dialog-fg-rgb: #{{base05-hex}} !important;

    /* Popovers */
    --adw-popover-bg-rgb: #{{base01-hex}} !important;
    --adw-popover-fg-rgb: #{{base05-hex}} !important;

    /* Thumbnails */
    --adw-thumbnail-bg-rgb: #{{base01-hex}} !important;
    --adw-popover-fg-rgb: #{{base05-hex}} !important;

    /* Miscellaneous */
    --adw-shade-rgb: 0, 0, 0 !important;
    --adw-shade-a: 0.36 !important;
}
