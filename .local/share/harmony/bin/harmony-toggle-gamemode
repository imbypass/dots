#!/bin/bash

gamemode=$(hyprctl getoption animations:enabled | awk 'NR==1{print $2}')
if [ "$gamemode" = 1 ]; then
    hyprctl --batch "\
                keyword animations:enabled 0;\
                keyword decoration:drop_shadow 0;\
                keyword decoration:blur:enabled 0;\
                keyword general:gaps_in 0;\
                keyword general:gaps_out 0;\
                keyword general:border_size 1;\
                keyword decoration:rounding 0" >/dev/null

    killall awww-daemon > /dev/null
    notify-send -u low -a Omarchy -t 3500 "Game Mode" "Toggled On" -i ~/.config/omarchy/current/theme/round-logo.svg
    exit 0
else
    awww-daemon & disown > /dev/null
    notify-send -u low -a Omarchy -t 3500 "Game Mode" "Toggled Off" -i ~/.config/omarchy/current/theme/round-logo.svg
fi

hyprctl reload >/dev/null
