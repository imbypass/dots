#!/bin/bash
source harmony-color-codes

TIMESTAMP=$(date +%Y-%m-%d_%H-%M-%S)

if [[ $1 == "start" ]];then
    if [[ $2 == "--noaudio" ]];then
        notify-send -u low -a wl-recorder -t 2750 "Screen Recorder" "Recording started!"
        cd "/home/${USER}/Videos/Screen Recordings/" && wf-recorder -f "${TIMESTAMP}.mp4" > /dev/null
    else
        notify-send -u low -a wl-recorder -t 2750 "Screen Recorder" "Recording started!"
        cd "/home/${USER}/Videos/Screen Recordings/" && wf-recorder -a -f "${TIMESTAMP}.mp4" > /dev/null
    fi
elif [[ $1 == "stop" ]];then
    notify-send -u low -a wl-recorder -t 2750 "Screen Recorder" "Recording stopped!\nRecording saved as: ${TIMESTAMP}.mp4"
    kill -s INT $(pidof wf-recorder)
else
  echo "ok"
fi
