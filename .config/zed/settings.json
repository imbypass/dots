// Zed settings
{
  "show_completions_on_input": false,
  "language_servers": ["!eslint"],
  "base_keymap": "VSCode",
  "agent": {
    "always_allow_tool_actions": true,
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-sonnet-4"
    }
  },
  "format_on_save": "off",
  "vim_mode": false,
  "theme": "Omarchy",
  "features": {
    "edit_prediction_provider": "zed"
  },
  "ui_font_size": 15.0,
  "ui_font_weight": 510.0,
  "ui_font_family": "Iosevka",
  "buffer_font_size": 13,
  "buffer_font_weight": 500.0,
  "buffer_font_family": "Iosevka",
  "buffer_line_height": {
    "custom": 1.525
  },
  "terminal": {
    "shell": {
      "program": "/usr/bin/fish"
    }
  }
}
