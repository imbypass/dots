// Zed settings
{
  "base_keymap": "VSCode",
  "icon_theme": "Zed (Default)",
  "agent": {
    "always_allow_tool_actions": true,
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-sonnet-4"
    }
  },
  "vim_mode": false,
  "theme": "Base16 Flavours",
  "features": {
    "edit_prediction_provider": "zed"
  },
  "ui_font_size": 14.5,
  "buffer_font_size": 12.5,
  "ui_font_family": "SF Compact Rounded",
  "buffer_font_family": "GeistMono Nerd Font Propo",
  "buffer_line_height": {
    "custom": 1.525
  },
  "terminal": {
    "shell": {
      "program": "/usr/bin/fish"
    }
  }
}
